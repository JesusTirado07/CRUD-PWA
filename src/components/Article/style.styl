.container
  max-width 400px
  width 80vw
  background-color white
  box-shadow 0 4px 8px rgba(0, 0, 0, 0.1), 0 2px 4px rgba(0, 0, 0, 0.06)
  padding 20px
  margin 20px auto
  border-radius 10px
  transition all 0.3s ease-in-out
  cursor pointer

  &:hover
    transform scale(1.05)
    box-shadow 0 6px 12px rgba(0, 0, 0, 0.2)

  h3
    color #7fbf00
    margin 0
    font-size 1.5rem
    font-weight 600

  p
    color #555
    font-size 1rem
    line-height 1.6
    margin-top 10px

